package gestioPeticions;

import java.util.ArrayList;

public class Sala {
	private String nomSala;
	private ArrayList<Peticio> peticionsDeLaSala;

	public Sala(String nomSala, ArrayList<Peticio> peticionsDeLaSala) {
		
		this.nomSala = nomSala;
		this.peticionsDeLaSala = peticionsDeLaSala;
	}
	public Sala(String nomSala) {
		
		this.nomSala = nomSala;
		
	}
	public String getNomSala() {
		return nomSala;
	}

	public void setNomSala(String nomSala) {
		this.nomSala = nomSala;
	}

	public ArrayList<Peticio> getPeticions() {
		return peticionsDeLaSala;
	}

	public void setPeticions(ArrayList<Peticio> peticionsDeLaSala) {
		this.peticionsDeLaSala = peticionsDeLaSala;
	}
	
	
	public void addPeticio(Peticio p) {		
		peticionsDeLaSala.add(p);		
	}

}
