package main;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.EntityTransaction;
import javax.persistence.Persistence;

import entidades.Estudiante;

public class Main {
	
	public static void main(String[] args) {
		EntityManagerFactory emf =  Persistence.createEntityManagerFactory("UPEstudiantes");
		
		EntityManager em = emf.createEntityManager();
		
		Estudiante estudiante1 = new Estudiante("Benito", 1, "Filología coreana 5");
		
		EntityTransaction tx = em.getTransaction();
		
		try {
			tx.begin();
			em.persist(estudiante1);
			tx.commit();
			
			System.out.println("Estudiante creado" + estudiante1);
		}
		catch (Exception e) {
			tx.rollback();
			e.printStackTrace();
			System.out.println("Petó D:");
		} finally {
			em.close();
			emf.close();
		}
		
		
		System.out.println("programa finalizado");
		
	}

}
